<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>ArticleServlet.DeleteArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>UserServlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>UserServlet.RegisterUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>servlet.PRACTICEServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getAll</servlet-name>
        <servlet-class>ArticleServlet.GetAllArticlesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAll</servlet-name>
        <url-pattern>/getAllArticles</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createNewArticle</servlet-name>
        <servlet-class>ArticleServlet.AddArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createNewArticle</servlet-name>
        <url-pattern>/createArticles</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getSingleArticle</servlet-name>
        <servlet-class>ArticleServlet.GetSingleArticle</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getSingleArticle</servlet-name>
        <url-pattern>/getSingle</url-pattern>
    </servlet-mapping>




</web-app>

